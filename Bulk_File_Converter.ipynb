import pandas as pd
import os
import zipfile
from google.colab import drive, files

# Step 1: Mount Google Drive
drive.mount('/content/drive')

# Step 2: Folder path
folder_path = "/content/drive/MyDrive/Convert All Files"

# Step 3: Get all files
all_files = os.listdir(folder_path)

if not all_files:
    raise Exception("âŒ Folder is empty")

converted_files = []

print(f"ğŸ“‚ Found {len(all_files)} total file(s)")

# Step 4: Process files
for file in all_files:
    file_path = os.path.join(folder_path, file)

    # Excel â†’ CSV
    if file.lower().endswith(".xlsx"):
        print(f"ğŸ”„ Excel â†’ CSV: {file}")
        df = pd.read_excel(file_path)
        output_file = file.replace(".xlsx", ".csv")
        df.to_csv(output_file, index=False)
        converted_files.append(output_file)

    # CSV â†’ Excel
    elif file.lower().endswith(".csv"):
        print(f"ğŸ”„ CSV â†’ Excel: {file}")
        df = pd.read_csv(file_path)
        output_file = file.replace(".csv", ".xlsx")
        df.to_excel(output_file, index=False)
        converted_files.append(output_file)

    else:
        print(f"â­ï¸ Skipping unsupported file: {file}")

# Step 5: Download logic
if not converted_files:
    raise Exception("âŒ No valid CSV or Excel files to convert")

elif len(converted_files) == 1:
    print("ğŸ“¥ Only one file converted, downloading directly...")
    files.download(converted_files[0])

else:
    zip_name = "Converted_Files.zip"
    print("ğŸ“¦ Multiple files converted, zipping them...")

    with zipfile.ZipFile(zip_name, 'w', zipfile.ZIP_DEFLATED) as zipf:
        for f in converted_files:
            zipf.write(f)

    files.download(zip_name)

print("\nâœ… Conversion and download completed successfully!")
